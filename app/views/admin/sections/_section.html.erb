<% div_for section do %>
  
  <h2>
    <%= section.name %>
    <span><%= 'inactively ' unless section.root? %>mapped to <%= section.route.display_permalink %></span>
  </h2>
    <% section.children(:limit => 3).each do |child| %>
      <% div_for child do %>
      <table class="summary">
        <tr>
          <td class="type"><span><%= status_of(child) %><%= child.class.to_s.downcase %></span></td>
          <td class="title"><%= link_to child.name, edit_polymorphic_path(child) %></td>
          <td class="slug"><%= child.route.display_slug %></td>
          <td class="comments">&nbsp;<%= pluralize(child.comments.count, 'comment') if child.respond_to?(:comments) %></td>
        </tr>  
      </table>
      <% end %>
    <% end %>
    <div class="section">
      <table class="summary">
        <tr>
          <td class="type">&nbsp;</td>
          <td class="all">
            <%= link_to 'View all objects within section', section %>
          </td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
        </tr>
      </table>
    </div>  
<% end %>  