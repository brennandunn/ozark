<% div_for article do %>
  <h3>
    <%= link_to article.name, edit_article_path(article) %>
    <span>created <%= relative_date article.created_at %></span> 
  </h3>
  <p class="meta">
    <% unless article.published? %>
      <span class="unpublished">unpublished</span> <span class="space">|</span> 
    <% end %>
    <%= pluralize article.comments.size, 'comment' %> <span class="space">|</span> 
    accessible via <%= link_to article.route.display_permalink, article.route.display_permalink %>
  </p>  
<% end %>  