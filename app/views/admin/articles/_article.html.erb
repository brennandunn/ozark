<% div_for article do %>
  <h3>
    <%= link_to article.name, edit_article_path(article) %>
    <span>created <%= relative_date article.created_at %></span> 
  </h3>
  <p class="meta">
    <% unless article.published? %>
      <span class="unpublished">unpublished</span> <span class="space">|</span> 
    <% end %> 
    Filed under <%= link_to article.section.name, article.section %> <span class="space">|</span> 
    <%= pluralize article.comments.count, 'comment' %> <span class="space">|</span> 
    accessible via <%= web_path(article) %>
  </p>  
<% end %>  